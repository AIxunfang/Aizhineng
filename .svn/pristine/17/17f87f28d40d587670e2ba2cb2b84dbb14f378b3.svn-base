<template>
   <el-row>
         <el-col :span='24'>
            <div class="navigationbar"> 
               <span class="navigationname">项目分享<i class="el-icon-arrow-right" aria-hidden="true"></i>
                      分享列表
                </span>
            </div>
         </el-col>
         <el-col :span="24">
              <div style="margin:20px">
                <el-table
                  :data="sharetableData"
                   border
                  style="width: 100%">
                  <el-table-column
                    prop="projectNameZh"
                    label="项目名称"
                    width="180">
                  </el-table-column>
                  <el-table-column
                    prop="cpu"
                    label="CPU"
                    width="80">
                  </el-table-column>
                  <el-table-column
                    prop="gpu"
                    width="80"
                    label="GPU">
                  </el-table-column>
                   <el-table-column
                    prop="memory"
                     width="80"
                    label="内存">
                  </el-table-column>                
                  <el-table-column
                    prop="detail"
                    label="分享描述">
                  </el-table-column>
                  <el-table-column
                    width="100"
                    label="是否分享">
                    <template slot-scope="scope">
                      <el-tooltip   :content="sharetableData[scope.$index].status == 1 ? '是' : '否' "       placement="top">
                        <el-switch
                          @change="swicthFacility(scope.$index,$event)" 
                          v-model="sharetableData[scope.$index].status"
                          active-value="1"
                          inactive-value="0">
                        </el-switch>
                      </el-tooltip>
                    </template>
                  </el-table-column>
                   <el-table-column width="100" label="操作">
                             <template slot-scope="scope">
                               <el-button type="danger" size="mini" @click="delectshare(scope.row)" >删除</el-button>
                             </template>
                   </el-table-column>
                </el-table>   
            </div>
         </el-col>
         <el-col :span="24">
                <div class="paagenumber" >
                   <el-pagination
                        background
                        layout="prev, pager, next, total"
                        :page-size='pageSize'
                        @current-change="pageIndexChange"
                        :total="paggtatol">
                  </el-pagination>
              </div> 
         </el-col>
           


   </el-row>
</template>
<script>
import {projectSharelist,projectSharupdate,projectSharedelete} from "@/api/api"
export default {
            data(){
                return{
                    currPage:1,
                    pageSize:10,
                    sharetableData:[],
                    paggtatol:null,
                }
            },
            methods:{
                 
                 getprojectSharelist(){
                       
                        var parms={
                               currPage:this.currPage,
                               pageSize:this.pageSize  
                        }
                      
                      projectSharelist(parms).then(res=>{
                               this.sharetableData=[]
                              if(res.data.code==0){
                                   console.log("=========")
                                    console.log(res)
                                    this.paggtatol=res.data.data.total
                                    res.data.data.list.forEach((item,index) =>{
                                           item.status=String(item.status)
                                           this.sharetableData.push(item)
                                    })
                              } 
                      })
                 },
                swicthFacility(index,val){
                          console.log(val)
                          console.log(index)
                         var  parms={
                                 shareId: this.sharetableData[index].shareId,
                                 status:Number(val)
                         } 
                       // console.log(parms)
                        projectSharupdate(parms).then(res=>{
                                 console.log(res)
                                 if(res.data.code==0){
                                      this.$message({
                                          type:'success',
                                          message:'设置成功'
                                      })
                                     this.getprojectSharelist() 
                                 }else{
                                       this.$message.error(res.dara.message)
                                 }
                            
                        })
                },
                pageIndexChange(index){

                },
               delectshare(index){
                   console.log(index)
                   var parms={
                           publishId:index.publishId
                   }
                       this.$confirm('此操作将永久删除该分享, 是否继续?', '提示', {
                            confirmButtonText: '确定',
                            cancelButtonText: '取消',
                            type: 'warning'
                          }).then(() => {
                               projectSharedelete(parms).then(res=>{
                                      if(res.data.code==0){
                                          this.$message({
                                              type:"success",
                                              message:'删除成功'
                                          })
                                        this.getprojectSharelist() 
                                      }else{
                                         this.$message.error(res.dara.message)
                                 }
                              })
                          }).catch(() => {
                            this.$message({
                              type: 'info',
                              message: '已取消删除'
                            })
                  });

               }


            },
            mounted(){
                    this.getprojectSharelist()
            }

}
</script>
